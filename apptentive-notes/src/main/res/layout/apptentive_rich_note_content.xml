<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/apptentive_note_title_with_message_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/apptentive_note_alternate_text"
        style="?apptentiveRichNoteAlternateTextStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/apptentive_note_title_with_message"
        style="?apptentiveRichNoteTitleWithMessageTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/apptentive_note_message"
        style="?apptentiveRichNoteMessageTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>